<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_background" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/resultNumArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:textColor="@color/black"
        android:textSize="@dimen/calc_text_size"
        app:layout_constraintEnd_toStartOf="@id/buttonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resultNumArea"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClear"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_c" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                app:icon="@android:drawable/ic_input_delete" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dtnPow"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_pow" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDiv"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_div" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMult"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_multiply" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn4"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn5"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_6" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMinus"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_minus" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn7"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn8"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_9" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlus"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_plus" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn0"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDot"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="1"
                android:text="@string/text_btn_dot" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEquals"
                style="@style/DefaultCalculatorButton"
                android:layout_weight="2"
                android:text="@string/text_btn_equal" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>